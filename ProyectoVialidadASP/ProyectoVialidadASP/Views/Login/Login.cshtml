
@{
    Layout = null;
    ViewBag.Tiltle = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login </title>
    <link href="https://fonts.googleapis.com/css?family=Poppins:600&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/a81368914c.js"></script>
    <link rel="stylesheet" type="text/css" href="~/Style/StyleIndex/SLogin2.css">

</head>
<body>

    <img class="wave" src="~/Imagen/ImgHome/wave.png">
    <div class="container">
        <div class="img">
            <img src="~/Imagen/ImgHome/img.png">
        </div>
        <div class="login-content">
            <form action="/Login/Validar" method="post" id="formulario">
                <img src="~/Imagen/ImgHome/user.png">
                <h2 class="title">Bienvenido</h2>
                <div class="input-div one">
                    <div class="i">
                        <i class="fas fa-user"></i>
                    </div>
                    <div class="div">
                        <h5>Nombre de Usuario</h5>
                        <label style="color:red" name="ERROR" id="error1">@ViewBag.MessageUser</label>
                        <input type="text" name="userText" class="input">
                    </div>
                </div>
                <div class="input-div pass">
                    <div class="i">
                        <i class="fas fa-lock"></i>
                    </div>
                    <div class="div">
                        <h5>Contraseña</h5>

                        <input type="password" name="passText" class="input">
                    </div>
                </div>
                <label style="color:red" name="ERROR" id="error2">@ViewBag.MessagePass</label>
                <input type="submit" class="btn" value="Iniciar Sesión">
            </form>
        </div>
    </div>
    <script src="~/Js/JLogin.js"></script>

</body>
</html>