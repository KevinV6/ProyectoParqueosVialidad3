
@{
    Layout = null;
    ViewBag.Tiltle = "Login";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login </title>
    <link rel="stylesheet" type="text/css" href="~/Style/StyleIndex/SLogin.css">

</head>
<body>
    <form action="/Login/Validar" method="post">
        <div class="form">
            <h2>Inicio de Sesion</h2>
            <div class="input">
                <div class="inputBox">
                    <label>Nombre de Usuario</label>
                    <label style="color:red" name="ERROR" id="error">@ViewBag.MessageUser</label>
                    <input type="text" name="userText" id="userText" placeholder="ingrese su usuario" required>
                </div>
                <div class="inputBox">
                    <label>Contraseña</label>
                    <label style="color:red" name="ERROR" id="error">@ViewBag.MessagePass</label>
                    <input type="password" name="passText" id="passText" placeholder="ingrese su constraseña" required>
                </div>
                <div class="inputBox1">
                    <input type="submit" name="" value="Iniciar Sesion">
                </div>
                <br>
                <label>No existen usuarios habilitados</label>
            </div>
        </div>
    </form>
</body>
</html>